<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level  %logger{36} {%X{test-class}:%X{test}} - %msg%n"/>
        </Console>
        <File name="DEVELOPMENT" fileName="target/development.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d  [%t] %-5level %logger{36} {%X{test-class}:%X{test}} - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Logger name="de.kaiserpfalzedv" level="trace" additivity="false">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="DEVELOPMENT"/>
        </Logger>
        <Root level="info">
            <AppenderRef ref="CONSOLE"/>
            <AppenderRef ref="DEVELOPMENT"/>
        </Root>
    </Loggers>
</Configuration>